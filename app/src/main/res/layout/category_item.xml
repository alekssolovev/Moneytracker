<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/category_card_root"
    app:cardCornerRadius="@dimen/corner_radius_category"
    app:cardElevation="@dimen/card_elevation_category"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_inner_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_category"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/category_item_category_name"
            android:padding="@dimen/text_padding_category"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>