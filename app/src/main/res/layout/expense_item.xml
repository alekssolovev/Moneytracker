<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expense_card_root"
    app:cardCornerRadius="@dimen/corner_radius_expense"
    app:cardElevation="@dimen/card_elevation_expense"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expense_inner_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_name_expense"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/expense_item_expense_name"
            android:padding="@dimen/text_padding_expense_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/text_size_expense_price"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentEnd="true"
            android:id="@+id/expense_item_expense_price" />

    </RelativeLayout>

</android.support.v7.widget.CardView>